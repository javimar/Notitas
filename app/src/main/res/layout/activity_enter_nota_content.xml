<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewNota"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="Autofill">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/addTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/notas_titulo"
                android:inputType="text"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/addBody"
                android:background="@null"
                android:gravity="start"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:hint="@string/notas_cuerpo"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:importantForAutofill="no" />

            <EditText
                android:id="@+id/addEtiqueta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/notas_etiqueta"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginBottom="8dp"
                android:textStyle="italic|bold"
                android:inputType="text" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="5dp"
                    android:scrollbars="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="@string/notas_color"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textStyle="bold" />
                    <Button
                        android:id="@+id/azulito"
                        android:onClick="buttonColor"
                        android:layout_marginEnd="10dp"
                        android:background="@color/c1"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                    <Button
                        android:id="@+id/verdecito"
                        android:onClick="buttonColor"
                        android:layout_marginEnd="10dp"
                        android:background="@color/c2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <Button
                        android:id="@+id/rojito"
                        android:onClick="buttonColor"
                        android:layout_marginEnd="10dp"
                        android:background="@color/c3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <Button
                        android:id="@+id/amarillito"
                        android:onClick="buttonColor"
                        android:layout_marginEnd="10dp"
                        android:background="@color/c4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <Button
                        android:id="@+id/naranjita"
                        android:onClick="buttonColor"
                        android:layout_marginEnd="10dp"
                        android:background="@color/c5"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <Button
                        android:id="@+id/gold"
                        android:onClick="buttonColor"
                        android:layout_marginEnd="10dp"
                        android:background="@color/c6"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                    <Button
                        android:id="@+id/silver"
                        android:onClick="buttonColor"
                        android:layout_marginEnd="10dp"
                        android:background="@color/c7"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <Button
                        android:id="@+id/bronze"
                        android:onClick="buttonColor"
                        android:layout_marginEnd="10dp"
                        android:layout_width="30dp"
                        android:background="@color/c8"
                        android:layout_height="30dp"/>
                    <Button
                        android:id="@+id/grey"
                        android:onClick="buttonColor"
                        android:layout_marginEnd="10dp"
                        android:background="@color/c9"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <Button
                        android:id="@+id/purple"
                        android:onClick="buttonColor"
                        android:layout_marginEnd="10dp"
                        android:background="@color/purple"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <Button
                        android:id="@+id/white"
                        android:onClick="buttonColor"
                        android:layout_marginEnd="10dp"
                        android:background="@color/white"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>